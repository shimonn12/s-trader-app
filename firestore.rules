// Firestore Security Rules for S Trader
// Copy these rules to Firebase Console → Firestore Database → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - each user identifies by their username
    match /users/{username} {
      // Allow read/write if the user is authenticated
      // Note: We use the username as the document ID for cross-device sync
      allow read, write: if request.auth != null;
      
      // Futures journal data
      match /futures/{document=**} {
        allow read, write: if request.auth != null;
      }
      
      // Stocks journal data
      match /stocks/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
